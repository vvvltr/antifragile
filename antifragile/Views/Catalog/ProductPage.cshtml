@model antifragile.ViewModels.ProductPageViewModel

<div class="container prodpage" style="margin-left: 5%; margin-top:5%">
    <div class="d-flex flex-row">
        <div style="width: 300px; height: 300px">
            <img class="mh-100 mw-100" src="~/imgs/default_pic.png"/>
        </div>
        <div class="d-flex flex-column col-5 px-2">
            <p class="fs-5">@Model.Name</p>
            <p class="fs-6 fw-bold" style="color: #FD7A53">@Model.Price руб</p>
            <button class="rounded-2 w-50 p-2" style="background-color: #FD7A53; border: none; color: white">Добавить в корзину</button>
            <p class="fs-6">@Model.Description</p>
        </div>
    </div>
</div>
